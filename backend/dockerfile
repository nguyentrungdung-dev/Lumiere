FROM python:3.11-slim

WORKDIR /app

# system deps (psycopg2 needs build deps)
RUN apt-get update && apt-get install -y build-essential libpq-dev gcc --no-install-recommends && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# copy app files (will be overridden by volume in dev for live edit)
COPY ./app ./app

EXPOSE 8000

# dev-friendly command (reload enabled)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]